<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv01"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:text="@string/info_statement"
    android:textSize="35px"/>
    <LinearLayout
        android:id="@+id/ly01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv01"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_mark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img_mark"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/height"
                android:textSize="35px"/>
            <EditText
                android:id="@+id/et_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_height"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:text="@string/cm"
                android:textSize="35px"/>
            <ImageView
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:layout_below="@id/tv_height"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/purple_line"
                android:layerType="software"/>
            <!--layerType實現虛線-->
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_mark2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img_mark2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/weight"
                android:textSize="35px"/>
            <EditText
                android:id="@+id/et_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_weight"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:text="@string/kg"
                android:textSize="35px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_weight"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="80dp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly01"
        android:layout_marginTop="60dp">
        <ImageView
            android:id="@+id/img_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <!--只為了做中間的基準-->
        <Button
            android:id="@+id/btn_keep_secret"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toLeftOf="@id/img_medium"
            android:layout_marginRight="40dp"
            android:text="@string/keep_secret"
            android:textSize="30px"
            android:textColor="@color/dark_gray"
            android:background="@drawable/bluecircle_bg" />
        <Button
            android:id="@+id/btn_next_time"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/img_medium"
            android:layout_marginLeft="40dp"
            android:text="@string/next_time"
            android:textSize="30px"
            android:textColor="@color/dark_gray"
            android:background="@drawable/bluecircle_bg"/>

    </RelativeLayout>
</RelativeLayout>